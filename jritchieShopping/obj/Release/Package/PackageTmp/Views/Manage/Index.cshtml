                            @Html.ActionLink("Create", "SetPassword", null, new { style = "color:rgb(255,120,0); text-decoration:underline" })
                        }
                        ]
                    </dd>
                </dl>*@
            </div>
        </div>


        <!-- Section Divider -->
        <div class="row">
            <div class="col-md-offset-3" style="border:1px solid rgba(255,120,0,.5); width:50%; margin-top:20px; margin-bottom:40px">
            </div>
        </div>


        <!-- Items Ordered Header -->
        <div class="row">
            <div class="col-md-12 text-center">
                <p style="font-weight:bold">Review Orders:</p>
            </div>
        </div>

        <!-- Prior Orders -->
        @if (ViewBag.UserOrders.Count > 0)
        {
            <table class="table" style="width:50%; margin: 0px auto">
                <tr>
                    <th style="width:15%">Order ID</th>
                    <th style="width:10%"></th>
                    <th style="width:30%">Order Date</th>
                    <th style="width:20%; text-align:center">Total</th>
                    <th style="width:25%"></th>
                </tr>

                @foreach (var order in ViewBag.UserOrders)
            {
                    <tr>
                        <td style="text-align:right">@order.Id.ToString()</td>
                        <td></td>
                        <td>@order.OrderDate</td>
                        <td style="text-align:right">@order.Total.ToString("N2")</td>
                        <td style="text-align:center">
                            <a href="@Url.Action("SubmittedDetails", "Orders", new { id = order.Id})">Details</a>
                        </td>
                    </tr>
                }
            </table>
        }

        <div style="margin-top:20px; padding:20px 0px 0px 0px; border-top: 1px solid rgb(255,120,0)">
            <div class="row">
                <div class="col-md-12 text-center">
                    <div class="form-actions no-color">
                        @Html.ActionLink("Return to Home page", "Index", "Home", null, new { style = "color:rgb(255,120,0); text-decoration:underline" })
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>




