@model jritchieShopping.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}



<div class="subpageDisplay">

    <div style="text-align:center; border-bottom:1px solid rgb(255,120,0); margin-bottom:20px">
        <h3>Manage your account</h3>
    </div>


    <p class="text-success">@ViewBag.StatusMessage</p>
    <div class="container-fluid" style="margin:40px 0px 26px 0px">

        <!-- Password -->
        <div class="row">
            <div class="col-md-12 text-center">
                <span style="font-weight:bold">Password: </span> 
                @if (Model.HasPassword)
                {
                    @Html.ActionLink("Change your password", "ChangePassword", null, new { style = "color:rgb(255,120,0); text-decoration:underline" })
                }
                else
                {
                    @Html.ActionLink("Create", "SetPassword", null, new { style = "color:rgb(255,120,0); text-decoration:underline" })
                }


                @*<dl class="dl-horizontal" style="margin-left:100px">
                    <dt>Password:</dt>
                    <dd>
                        [
