@{
    ViewBag.Title = "Home Page";
}


<script src="~/assets/scripts/jquery-1.9.1.js"></script>
<script src="~/assets/scripts/bootstrap.js"></script>


<div class="container-fluid">

    <div id="homeCarousel" class="carousel slide">

        <ol class="carousel-indicators">
            <li class="item1 active"></li>
            <li class="item2"></li>
            <li class="item3"></li>
            <li class="item4"></li>
        </ol>

        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img class="img-responsive center-block" src="~/assets/Images/Carousel/patekphilippe_5180_1R_001.jpg">
            </div>
            <div class="item">
                <img class="img-responsive center-block" src="~/assets/Images/Carousel/patekphilippe_5396R_012.jpg">
            </div>
            <div class="item">
                <img class="img-responsive center-block" src="~/assets/Images/Carousel/patekphilippe_5905P_001.jpg">
            </div>
            <div class="item">
                <img class="img-responsive center-block" src="~/assets/Images/Carousel/patekphilippe_7140R_5940J.jpg">
            </div>
        </div>
        
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#homeCarousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
        <a class="right carousel-control" href="#homeCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
    </div>

    <div class="headerImageText" style="position:absolute; top:26%; left:26%; transform: translate(-26%, -26%)">

        @{ 
            var currentMonth = System.DateTime.Today.ToString("MMMM");
        }

        <h1>Patek Philippe on sale!</h1>
        <h3>@currentMonth only: 10-15% off</h3>
        <a class="btn btn-default" href="@Url.Action("Index", "Items")">Shop now</a>
    </div>

</div>


<script>
        $(document).ready(function () {
            $('.carousel').carousel({
                interval: 5000
            });

            // Enable Carousel Indicators
            $(".item1").click(function () {
                $("#homeCarousel").carousel(0);
            });
            $(".item2").click(function () {
                $("#homeCarousel").carousel(1);
            });
            $(".item3").click(function () {
                $("#homeCarousel").carousel(2);
            });
            $(".item4").click(function () {
                $("#homeCarousel").carousel(3);
            });

            // Enable Carousel Controls
            $(".left").click(function () {
                $("#homeCarousel").carousel("prev");
            });
            $(".right").click(function () {
                $("#homeCarousel").carousel("next");
            });
        });
</script>

