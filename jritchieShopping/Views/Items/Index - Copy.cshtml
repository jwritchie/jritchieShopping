    <!--script(s)-->
    <script>

        // Display or hide navbar.
        function navbarVisibility() {
            var navbarStatus = document.getElementById("navbar");
            if (navbarStatus.style.display === "none") {
                document.getElementById("navbar").style.display = "block";
            } else {
                document.getElementById("navbar").style.display = "none";
            }
        }

        // Close the navbar.
        function closeNavbar() {
            document.getElementById("navbar").style.display = "none";
        }

        // Display or hide Collection years.
        function collectionVisibility() {
            var collectionStatus = document.getElementById("collectionYears");
            if (collectionStatus.style.display === "none") {
                document.getElementById("collectionYears").style.display = "block";
                document.getElementById("collectionArrow").setAttribute("class","fa fa-caret-down");
            } else {
                document.getElementById("collectionYears").style.display = "none";
                document.getElementById("collectionArrow").setAttribute("class", "fa fa-caret-right");
            }
        }

    </script>

