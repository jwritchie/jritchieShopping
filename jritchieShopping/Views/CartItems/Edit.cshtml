@model jritchieShopping.Models.CodeFirst.CartItem

@{
    ViewBag.Title = "Edit";
}

<div class="subpageDisplay">

    <div style="text-align:center; border-bottom:1px solid rgb(255,120,0)">
        <h2>Cart item</h2>
        <h5 style="font-weight:bold">@Model.Item.Name</h5>
    </div>

    <div class="container-fluid" >
    </div>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal" style="margin-top:20px; border-bottom:1px solid rgb(255,120,0)">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(model => model.Id)                @*// Values are passed, but are in hidden fields.*@
                @Html.HiddenFor(model => model.Created)
                @Html.HiddenFor(model => model.ItemId)
                @Html.HiddenFor(model => model.CustomerId)

                <div class="form-group">
                    @Html.Label("Update quantity", htmlAttributes: new { @class = "control-label col-md-6" })
                    @*@Html.LabelFor(model => model.Count, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.Count, new { htmlAttributes = new { @class = "form-control", @min = "1" } })
                        @Html.ValidationMessageFor(model => model.Count, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-6 col-md-6">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div style = "text-align:center; padding:20px 0px 10px 0px">
            @Html.ActionLink("Back to Cart", "Index", null, new { style = "color:rgb(255,120,0); text-decoration:underline" } )
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }

</div>