@model jritchieShopping.Models.CodeFirst.CartItem

@{
    ViewBag.Title = "Delete";
}

<div class="subpageDisplay">

    <div style="text-align:center; border-bottom:1px solid rgb(255,120,0); margin-bottom:20px">
        <h3>Delete selected item from cart</h3>
    </div>

    <div class="container-fluid">
        <div class="row">
            <p class="col-md-12 text-center" style="color:rgb(255,120,0)">Are you sure you want to delete this item?</p>
        </div>
    </div>
    
    <div style="margin-bottom:40px">
        <table class="table" style="width:70%; margin: 0px auto">
            <tr>
                <th style="width:10%">
                    Item
                </th>
                <th style="width:55%">
                </th>
                <th style="text-align:right; width:15%">
                    Quantity
                </th>
                <th style="text-align:right; width:20%">
                    Unit Price
                </th>
            </tr>

            <tr>
                <td>
                    <img src="@Model.Item.MediaURL" style="height:50px; width:auto" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Item.Name)
                </td>
                <td style="text-align:right">
                    @Html.DisplayFor(modelItem => Model.Count)
                </td>
                <td style="text-align:right">
                    $
                    @Model.Item.Price.ToString("N2")
                </td>
            </tr>

        </table>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 text-center" style="margin-top:-50px">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default" />
                        <span>|</span>
                        <a class="btn btn-default" href="@Url.Action("Index", "CartItems")">Cancel</a>
                    </div>
                }
            </div>
        </div>
    </div>

</div>
