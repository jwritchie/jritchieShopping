        <div style="padding:20px 0px 0px 0px; border-top: 1px solid rgb(255,120,0)">
            <div class="row">
                <div class="col-md-12 text-center">
                    <div class="form-actions no-color">
                        @Html.ActionLink("Return to Home page", "Index", "Home", null, new { style = "color:rgb(255,120,0); text-decoration:underline" })
                    </div>
                </div>
            </div>
        </div>





